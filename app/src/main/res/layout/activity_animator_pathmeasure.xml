<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Paint.Style.FILL 只绘制图形轮廓"
                android:textSize="@dimen/dp_14" />

            <fly.rotate.com.customview.fivestar.SimpleFivePointedStar
                android:id="@+id/simpleFivePointedStar0"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorPrimary"
                app:paint_style="FILL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Paint.Style.STROKE 只绘制图形内容 "
                android:textSize="@dimen/dp_14" />

            <fly.rotate.com.customview.fivestar.SimpleFivePointedStar
                android:id="@+id/simpleFivePointedStar1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorPrimary"
                app:paint_style="STROKE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Paint.Style.FILL_AND_STROKE 既绘制轮廓也绘制内容 "
                android:textSize="@dimen/dp_14" />

            <fly.rotate.com.customview.fivestar.SimpleFivePointedStar
                android:id="@+id/simpleFivePointedStar2"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorPrimary"
                app:paint_style="FILL_AND_STROKE" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>